<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a21091.secondproject.MainActivity">
    <EditText
        android:id="@+id/Manufacturer"
        android:layout_width="170dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Diagonal"
        android:layout_alignStart="@+id/Diagonal"
        android:layout_marginTop="27dp" />

    <EditText
        tools:ignore="MissingConstraints"
        android:id="@+id/Diagonal"
        android:layout_width="170dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/Manufacturer"
        android:layout_alignLeft="@+id/Time"
        android:layout_alignStart="@+id/Time"
        android:layout_marginTop="49dp" />

    <EditText
        tools:ignore="MissingConstraints"
        android:id="@+id/Time"
        android:layout_width="170dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/Diagonal"
        android:layout_alignLeft="@+id/Cost"
        android:layout_alignStart="@+id/Cost"
        android:layout_marginTop="72dp" />

    <EditText
        tools:ignore="MissingConstraints"
        android:id="@+id/Cost"
        android:layout_width="170dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите производителя ноутбука:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Manufacturer"
        android:layout_alignStart="@+id/Manufacturer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите диагональ экрана ноутбука:"
        android:id="@+id/textView3"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/Manufacturer"
        android:layout_alignLeft="@+id/Diagonal"
        android:layout_alignStart="@+id/Diagonal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите время работы без перезарядки:"
        android:id="@+id/textView4"
        android:layout_below="@+id/Diagonal"
        android:layout_alignLeft="@+id/Time"
        android:layout_alignStart="@+id/Time"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите стоимость ноутбука:"
        android:id="@+id/textView5"
        android:layout_below="@+id/Time"
        android:layout_alignLeft="@+id/Cost"
        android:layout_alignStart="@+id/Cost"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restextview"
        android:layout_below="@+id/Cost"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
